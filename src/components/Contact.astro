<style>
    /* Contact Section */
    .contact {
        background: rgba(10, 10, 10, 0.8);
        backdrop-filter: blur(20px);
        padding: 8rem 4rem;
        text-align: center;
        position: relative;
        z-index: 1;
        border-top: 1px solid var(--color-border);
    }

    .contact-content {
        max-width: 700px;
        margin: 0 auto;
    }

    .section-label {
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-blue) 100%);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
        animation: gradientShift 3s ease infinite;
    }

    .contact-title {
        font-family: var(--font-display);
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        margin-bottom: 1.5rem;
    }

    .contact-title .gradient-text {
        background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-blue) 100%);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradientShift 3s ease infinite;
    }

    .contact-subtitle {
        color: var(--color-gray);
        font-size: 1.2rem;
        margin-bottom: 3rem;
    }

    .contact-cta-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .contact-cta {
        display: inline-block;
        padding: 1.25rem 3rem;
        background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-blue) 100%);
        color: var(--color-bg);
        text-decoration: none;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

    .contact-cta::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        transition: width 0.6s ease, height 0.6s ease;
    }

    .contact-cta:hover::before {
        width: 300px;
        height: 300px;
    }

    .contact-cta:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 50px rgba(212, 175, 55, 0.4);
    }

    .contact-divider {
        color: var(--color-gray);
        font-size: 0.9rem;
    }

    .contact-email {
        color: var(--color-blue);
        text-decoration: none;
        font-size: 1.15rem;
        font-weight: 500;
        transition: color 0.3s ease;
        position: relative;
    }

    .contact-email::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 100%;
        height: 1px;
        background: var(--color-blue);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .contact-email:hover {
        color: var(--color-gold);
    }

    .contact-email:hover::after {
        transform: scaleX(1);
        background: var(--color-gold);
    }

    /* Footer */
    footer {
        padding: 3rem 4rem;
        background: var(--color-bg);
        border-top: 1px solid var(--color-border);
    }

    .footer-content {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .footer-copy {
        color: var(--color-gray);
        font-size: 0.9rem;
    }

    .footer-copy strong {
        color: var(--color-white);
    }

    .footer-socials {
        display: flex;
        gap: 1rem;
    }

    .footer-socials a {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--color-border);
        border-radius: 50%;
        color: var(--color-gray);
        transition: all 0.4s ease;
    }

    .footer-socials a:hover {
        color: var(--color-gold);
        border-color: var(--color-gold);
        transform: translateY(-4px);
        box-shadow: 0 10px 20px rgba(212, 175, 55, 0.2);
    }

    .footer-socials svg {
        width: 18px;
        height: 18px;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .contact {
            padding: 5rem 2rem;
        }

        footer {
            padding: 2rem;
        }
    }

    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

<style>
    /* ============================================
       SECTION EXPERTISE - SEAMLESS
    ============================================ */
    .expertise-section {
        padding: 8rem 4rem;
        max-width: 1400px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
        scroll-margin-top: 100px;
    }

    .expertise-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .expertise-label {
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        background: linear-gradient(135deg, #d4af37 0%, #0ea5e9 100%);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
        animation: gradientShift 3s ease infinite;
    }

    .expertise-title {
        font-family: 'Syne', sans-serif;
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 800;
        line-height: 1.2;
        letter-spacing: -0.02em;
        color: #ffffff;
    }

    /* ============================================
       GRID - 3 ELEMENTS
    ============================================ */
    .expertise-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto auto;
        gap: 1.5rem;
    }

    /* ============================================
       TESTIMONIAL CARD (Grande carte - full width)
    ============================================ */
    .testimonial-card {
        grid-column: 1 / -1;
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(20px);
        border: 1px solid #1a1a1a;
        border-radius: 24px;
        padding: 2rem 0;
        overflow: hidden;
        transition: all 0.4s ease;
    }

    .testimonial-card:hover {
        border-color: #d4af37;
    }

    .testimonial-card-header {
        padding: 0 2.5rem 1.5rem;
    }

    .testimonial-card-header h3 {
        font-family: 'Syne', sans-serif;
        font-size: 1.1rem;
        font-weight: 700;
        color: #ffffff;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 0;
    }

    .testimonial-icon {
        font-size: 1.25rem;
    }

    /* ============================================
       MARQUEE
    ============================================ */
    .marquee-wrapper {
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .marquee-wrapper::before,
    .marquee-wrapper::after {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100px;
        z-index: 2;
        pointer-events: none;
    }

    .marquee-wrapper::before {
        left: 0;
        background: linear-gradient(to right, #050505 0%, transparent 100%);
    }

    .marquee-wrapper::after {
        right: 0;
        background: linear-gradient(to left, #050505 0%, transparent 100%);
    }

    .marquee-content {
        display: flex;
        gap: 2rem;
        animation: scrollMarquee 30s linear infinite;
        width: max-content;
        padding: 0 1rem;
    }

    .marquee-content:hover {
        animation-play-state: paused;
    }

    @keyframes scrollMarquee {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    /* ============================================
       TESTIMONIAL BOX
    ============================================ */
    .testimonial-box {
        flex-shrink: 0;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid #1a1a1a;
        border-radius: 16px;
        padding: 1.5rem 2rem;
        min-width: 480px;
        max-width: 480px;
    }

    .testimonial-stars {
        color: #d4af37;
        font-size: 1rem;
        margin-bottom: 0.75rem;
    }

    .testimonial-quote {
        color: #737373;
        font-size: 0.9rem;
        line-height: 1.7;
        font-style: italic;
        margin: 0 0 1rem 0;
    }

    .testimonial-author-block {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .testimonial-avatar-circle {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: linear-gradient(135deg, #d4af37, #0ea5e9);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
        font-weight: 700;
        color: #050505;
    }

    .testimonial-author-info {
        display: flex;
        flex-direction: column;
    }

    .testimonial-author-name {
        font-size: 0.85rem;
        font-weight: 600;
        color: #ffffff;
    }

    .testimonial-author-role {
        font-size: 0.75rem;
        color: #737373;
    }

    /* ============================================
       VALUE CARDS (2 petites cartes)
    ============================================ */
    .value-card-new {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(20px);
        border: 1px solid #1a1a1a;
        border-radius: 24px;
        padding: 2.5rem;
        transition: all 0.4s ease;
        overflow: hidden;
    }

    .value-card-new:hover {
        border-color: #d4af37;
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .value-card-icon {
        font-size: 2.5rem;
        margin-bottom: 1.25rem;
        display: block;
    }

    .value-card-new h3 {
        font-family: 'Syne', sans-serif;
        font-size: 1.25rem;
        font-weight: 700;
        color: #0ea5e9;
        margin: 0 0 0.75rem 0;
    }

    .value-card-new p {
        color: #737373;
        font-size: 0.9rem;
        line-height: 1.7;
        margin: 0;
    }

    /* ============================================
       RESPONSIVE
    ============================================ */
    @media (max-width: 1024px) {
        .expertise-section {
            padding: 5rem 2rem;
        }

        .expertise-grid {
            grid-template-columns: 1fr;
        }

        .testimonial-card {
            grid-column: 1;
        }

        .testimonial-box {
            min-width: 320px;
            max-width: 320px;
        }

        .marquee-wrapper::before,
        .marquee-wrapper::after {
            width: 50px;
        }
    }

    @media (max-width: 480px) {
        .expertise-section {
            padding: 4rem 1.5rem;
        }

        .testimonial-box {
            min-width: 280px;
            max-width: 280px;
            padding: 1.25rem 1.5rem;
        }

        .value-card-new {
            padding: 2rem;
        }

        .testimonial-card-header {
            padding: 0 1.5rem 1.5rem;
        }
    }
</style>